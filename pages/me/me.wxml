<view class="container">
  <block wx:if="{{!userInfo}}">
    <view class="face-wrap">
      <image src="/images/user-removebg-preview.png" class="face-img"/>
    </view>
    <button class="button-login" bindtap="login">Login</button>
  </block>
  
  <block wx:else>
    <view class="face-wrap">
      <image src="{{userInfo.avatarUrl}}" class="face-img"/>
    </view>
    <text class="username">{{userInfo.nickName}}</text>
    <button class="button-logout" bindtap="logout">Logout</button>
  </block>

  <view class="menu-item" bindtap="toMyOrder">My Order</view>
</view>