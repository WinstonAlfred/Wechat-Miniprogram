 /* Search CSS */
 .search-wrap {
  padding: 0 20rpx 20rpx 20rpx;
  background-color: #FF6146;
}
.search-box {
display: flex;
flex-direction: row;
border: 1rpx solid gainsboro;
padding: 0 20rpx;
justify-content: space-between;
align-items: center; 
background-color: white;
border-radius: 20rpx;
}
.input-cell {
padding: 20rpx 20rpx;
width: 500rpx;
background-color: white;
}
.search-img {
width: 50rpx;
height: 50rpx;
background-color: white;
}

/* Product CSS */
.good-box {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  align-items: center;
}

.good-img {
  width: 250rpx;
  height: 200rpx;
  object-fit: cover;
}

.right-box {
  width: 440rpx;
  height: 200rpx;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
}

.title {
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.right-bottom-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.tag {
  font-size: 30rpx;
  color: #888;
  background-color: #f5f5f5;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.price {
  font-size: 40rpx;
  color: #e74c3c;
  font-weight: bold;
}