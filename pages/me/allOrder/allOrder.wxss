.page-title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  padding: 20px 0;
}

.order-wrap {
  background-color: #f8f8f8;
  margin: 10px;
  padding: 15px;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.order-id {
  font-weight: bold;
  margin-bottom: 10px;
}

.order-details {
  margin-bottom: 15px;
}

.order-details view {
  margin-bottom: 5px;
}

.goods-list {
  border-top: 1px solid #e0e0e0;
  padding-top: 10px;
}

.good-item {
  display: flex;
  margin-bottom: 10px;
}

.good-cover {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

.good-info {
  flex: 1;
}

.good-price, .good-quantity {
  color: #888;
}

.load-more, .no-more {
  text-align: center;
  padding: 10px;
  color: #888;
}

/* Style for the search container */
.search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  margin: 20rpx;
}

/* Style for the search input */
.search-container input {
  flex-grow: 1;
  padding: 15rpx;
  font-size: 32rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

/* Style for the buttons */
.search-container button {
  padding: 10rpx 20rpx; /* Adjust padding for a better fit */
  font-size: 28rpx; /* Slightly smaller font size */
  color: #fff;
  background-color: #007aff;
  border: none;
  border-radius: 10rpx;
  flex-shrink: 0; /* Prevent buttons from shrinking */
  width: 100rpx; /* Ensure consistent button width */
  text-align: center;
}

.search-container button:active {
  background-color: #005bbb;
}

.search-box {
  width: 50rpx;
  height: 50rpx;
}
