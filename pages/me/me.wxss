.container {
  padding: 20rpx;
  min-height: 100vh;
}

.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.login-btn {
  background-color: #FF9800;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}

.user-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  background-color: white;
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.role {
  font-size: 28rpx;
  color: #FF9800;
  font-weight: 500;
}

.notification {
  background-color: #FFE0B2;
  border: 1px solid #FFB74D;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
}

.notification button {
  background-color: #FF9800;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
}

.user-options, .admin-options {
  width: 90%;
  margin-bottom: 20rpx;
}

.option-item {
  background-color: #FF9800;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}

.logout-btn {
  margin-top: 40rpx;
  background-color: #FF5722;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}