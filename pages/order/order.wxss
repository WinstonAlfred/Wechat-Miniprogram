.order-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.name-box, .phone-box {
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.name-title, .phone-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.name-input, .phone-input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 10rpx;
}

.good-box {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.good-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.good-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good-title {
  font-size: 35rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 560;
}

.good-right-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.good-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

.order-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.total-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

.button-container {
  margin-left: auto;
}

.place-order-btn {
  background-color: rgb(255, 115, 0);
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: none;
}

.order-tag {
  color: grey;
  font-size: 30rpx;
  font-weight: 400;
}

.empty-order {
  text-align: center;
  padding: 40rpx;
  color: #999;
}