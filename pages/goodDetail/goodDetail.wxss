.good-box {
  height: 600rpx;
}

.good-img {
  width: 100%;
  height: 600rpx;
}

.good-price-tag {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx 20rpx;
  align-items: center;
}

.good-price {
  color: red;
  font-size: 40rpx;
  font-weight: 530;
}

.good-tag-box {
  color: grey;
  margin: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.purchase-info {
  flex-grow: 1;
}

.share-btn {
  background: rgb(236, 236, 236);
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.good-title {
  font-size: 50rpx;
}

.good-description {
  font-size: 50rpx;
  font-weight: 550;
  padding: 20rpx 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid gainsboro;  
}

.good-detail-box {
  margin: 0 20rpx;
  text-align: justify;
}