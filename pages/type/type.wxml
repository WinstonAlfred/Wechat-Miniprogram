
<view class="type-box">

  <!-- left view -->
  <scroll-view scroll-y="true" class="type-left">
  <block wx:for="{{categoriesList}}">
    <view>{{item.name}}</view>
  </block>
  </scroll-view>

  <!-- right view -->
  <scroll-view scroll-y="true">

    <!-- Product Container -->
    <block wx:for="{{goodsList}}">
    <view class="type-good-box">
      <image src="{{item.cover}}" class="type-good-img"/>
      <view class="type-good-right">
        <view class="type-good-title">
          <text>{{item.title}}</text>
        </view>
        <view class="type-good-tag">剩余:80</view>
        <view class="bottom-box">
          <view class="type-good-price">¥{{item.price}}</view>
          <view class="choose-num-box">
            <image src="/images/minus.png"/>
            <view class="type-good-number">10</view>
            <image src="/images/add.png"/>
          </view>
        </view>
      </view>
    </view>
  </block>

  </scroll-view>

</view>