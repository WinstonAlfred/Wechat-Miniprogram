.cart-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.good-box {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.choose-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  align-self: center;
}

.good-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.good-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.good-right-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.good-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

.good-quantity-control {
  display: flex;
  align-items: center;
}

.add-delete-img {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.type-good-number {
  font-size: 28rpx;
  margin: 0 20rpx;
  min-width: 40rpx;
  text-align: center;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.total-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

.checkout-btn {
  background-color:rgb(255, 115, 0);
  color: #ffffff;
  font-size: 28rpx;
  padding: 15rpx 20rpx;
  border-radius: 30rpx;
  border: none;
}