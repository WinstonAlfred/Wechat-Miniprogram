<view class="cart-container">
  <block wx:if="{{cartList.length > 0}}">
    <block wx:for="{{cartList}}" wx:key="index">
      <view class="good-box">
        <image src="{{item.selected ? 'https://7469-tianyi-9ggnnj8xa7b81241-1328856567.tcb.qcloud.la/kit-cms-upload/2024-08-26/15391724688001539_choose.webp?sign=971948b20a9a151dc6c18dd4e2c3023d&t=1724688126' : 'https://7469-tianyi-9ggnnj8xa7b81241-1328856567.tcb.qcloud.la/kit-cms-upload/2024-08-27/19821724724509652_Untitled_design__5_-removebg-preview.png?sign=e4f956cc5518daf83cb43fa54f650e32&t=1724724522'}}" class="choose-img" bindtap="onToggleSelect" data-index="{{index}}"/>
        <image src="{{item.cover}}" class="good-img" bind:tap="toGoodDetail" data-id="{{item._id}}"/>
        <view class="good-right">
          <view class="good-title">{{item.title}}</view>
          <view class="cart-tag">剩余:{{item.stock}}</view>
          <view class="good-right-bottom">
            <view class="good-price">Rp{{item.price}}</view>
            <view class="good-quantity-control">
              <image src="https://7469-tianyi-9ggnnj8xa7b81241-1328856567.tcb.qcloud.la/kit-cms-upload/2024-08-26/17281724686896728_minus.png?sign=1a08c1388996477e0e5ffe08e234ed15&t=1724687114" class="add-delete-img" bindtap="onMinusItem" data-index="{{index}}"/>
              <view class="type-good-number">{{item.quantity}}</view>
              <image src="https://7469-tianyi-9ggnnj8xa7b81241-1328856567.tcb.qcloud.la/kit-cms-upload/2024-08-26/19391724686876469_add.png?sign=d36c17cf350f6cdd29d94a60f5c0aa39&t=1724687082" class="add-delete-img" bindtap="onAddItem" data-index="{{index}}"/>
            </view>
          </view>
        </view>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class="empty-cart">
      <text>购物车是空的</text>
    </view>
  </block>
</view>

<view class="cart-footer">
  <view class="total-price">总计: {{totalPrice}}</view>
  <!-- <button class="checkout-btn" bindtap="onCheckout">结算</button> -->
</view>
