 /* Search CSS */
.search-box {
  display: flex;
  flex-direction: row;
  border: 1rpx solid #f7f7f7;
  margin: 0 20rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  justify-content: space-between;
  align-items: center; 
}
.input-cell {
  padding: 20rpx 20rpx;
  width: 500rpx;
}
.search-img {
  width: 50rpx;
  height: 50rpx;
}


/* Carousel CSS */
.swiper-wrap {
  padding: 20rpx 20rpx;
}
.swiper-box {
  height: 500rpx;
}
.swiper-img{
  width: 100%;
  border-radius: 20rpx;
  height: 500rpx;
}


